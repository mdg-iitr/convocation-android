<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:showIn="@layout/activity_home">
    
        <android.support.v7.widget.CardView
            android:id="@+id/dress_code_card_female"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorAccent"
            android:layout_margin="5dp">
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                   android:id="@+id/dress_code_text_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Saree (For Females)"
                    android:layout_alignParentBottom="true"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
    
            </RelativeLayout>
    
        </android.support.v7.widget.CardView>
    
        <android.support.v7.widget.CardView
            android:id="@+id/dree_code_card_male"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:background="@color/colorAccent">
    
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dress_code_text_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Piece Dark Suite (For Males)"
                    android:layout_alignParentBottom="true"
                    android:textSize="15dp"
                    android:layout_margin="5dp"/>
    
            </RelativeLayout>
    
        </android.support.v7.widget.CardView>
    
    </LinearLayout>
