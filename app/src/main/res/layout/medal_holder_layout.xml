<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bigger_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">
    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/grey_card"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/inCard">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/holder_image"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/holder_name"
            android:layout_margin="@dimen/general_margin"
            android:textColor="#444444"
            android:textSize="14sp"
            android:textAppearance="@style/AllCapsFalse"
            android:fontFamily="@font/metropolis_medium"
            android:layout_toRightOf="@+id/holder_image"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/holder_name"
            android:id="@+id/holder_branch_en"
            android:layout_margin="@dimen/general_margin"
            android:textColor="#737373"
            android:textSize="12sp"
            android:textAppearance="@style/AllCapsFalse"
            android:fontFamily="@font/metropolis_extralight"
            android:layout_toRightOf="@+id/holder_image"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>