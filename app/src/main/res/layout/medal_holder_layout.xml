<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheduleEventModel"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="6dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/holder_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/holder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/holder_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/holder_image"
        android:fontFamily="@font/metropolis_medium"
        android:text="Sample Event"
        android:textColor="#444444"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/holder_branch_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/holder_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/holder_image"
        android:fontFamily="@font/metropolis_extralight"
        android:text="Sample Venue"
        android:textColor="#737373"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ededed" />

</RelativeLayout>