<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bigger_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <RelativeLayout
        android:id="@+id/inCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/holder_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/holder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/general_margin"
            android:layout_toRightOf="@+id/holder_image"
            android:fontFamily="@font/metropolis_medium"
            android:textAppearance="@style/AllCapsFalse"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/holder_branch_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/holder_name"
            android:layout_margin="@dimen/general_margin"
            android:layout_toRightOf="@+id/holder_image"
            android:fontFamily="@font/metropolis_extralight"
            android:textAppearance="@style/AllCapsFalse"
            android:textColor="#737373"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>