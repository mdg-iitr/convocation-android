<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="24dp"
        tools:ignore="RtlSymmetry"
        android:paddingEnd="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#262626"
        android:text="Basic Details"
        />
        
        <EditText
            android:id="@+id/register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="Name"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/register_enno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="Enrollment Number"
            android:layout_marginTop="28.2dp"/>

        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="E-mail Id"
            android:layout_marginTop="28.2dp"/>

        <EditText
            android:id="@+id/register_phno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="Phone Number"
            android:layout_marginTop="28.2dp"/>

        <EditText
            android:id="@+id/register_banktransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="Bank Transaction Id (Id after paying convo fee)"
            android:layout_marginTop="28.2dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#737373"
            android:lineSpacingExtra="8sp"
            android:text="*Girls dresses may include different inputs"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#262626"
        android:text="Additional Details"
        android:layout_marginTop="50dp"
        />

        <EditText
            android:id="@+id/register_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="Permanent Address"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/register_mobno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="Mobile Number"
            android:layout_marginTop="28.2dp"/>

        <EditText
            android:id="@+id/register_emailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#afafaf"
            android:lineSpacingExtra="6sp"
            android:hint="E-mail Id"
            android:layout_marginTop="28.2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#262626"
        android:text="People Details"
        android:layout_marginTop="50.6dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#737373"
            android:text="(Select number of people coming with you)"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="25dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <Button
                android:id="@+id/people_none"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="None"/>

            <Button
                android:id="@+id/people_1"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="1"/>

            <Button
                android:id="@+id/people_2"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="2"/>
            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#262626"
            android:text="Vehicle Details"
            android:layout_marginTop="50.6dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#737373"
            android:text="(Select number of vehicle coming with you)"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="25dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vehicle_none"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="None"/>

            <Button
                android:id="@+id/vehicle_1"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="1"/>

        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#262626"
            android:text="Terms &amp; Conditions"
            android:layout_marginTop="70dp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            
            <CheckBox
                android:id="@+id/checkbox_terms1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#ffffff"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#737373"
                android:lineSpacingExtra="6sp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="I agree to all terms and conditions."
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="111dp">

            <CheckBox
                android:id="@+id/checkbox_terms2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="#ffffff"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#737373"
                android:lineSpacingExtra="6sp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="I agree to all terms and conditions."
                />
        </LinearLayout>

    </LinearLayout>

            <Button
                android:id="@+id/register_submit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="SUBMIT"
                android:layout_alignBottom="@+id/register_form"
                />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>