<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    tools:context="ac.in.iitr.mdg.convocation.RegisterActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_no_radius"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/ToolbarStyle">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_register"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            app:collapseIcon="@drawable/ic_navigate_before_black_24dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <ImageView
                android:id="@+id/back_button_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                app:srcCompat="@drawable/ic_navigate_before_black_24dp" />

            <TextView
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/metropolis_bold"
                android:text="@string/registration"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:clipChildren="false"
                tools:ignore="RtlCompat">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="@string/basic_details"
                    android:textColor="#262626"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:textColor="#afafaf"
                    android:textColorHint="#afafaf"
                    android:theme="@style/BottomLine" />

                <EditText
                    android:id="@+id/register_enrollment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:hint="@string/enrollment"
                    android:inputType="number"
                    android:textColor="#afafaf"
                    android:textColorHint="#afafaf"
                    android:theme="@style/BottomLine" />

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="#262626"
                    android:textColorHint="#afafaf"
                    android:theme="@style/BottomLine" />

                <EditText
                    android:id="@+id/register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:textColor="#262626"
                    android:textColorHint="#afafaf"
                    android:theme="@style/BottomLine" />

                <EditText
                    android:id="@+id/register_bankTransactionId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:hint="@string/transaction_id_pattern"
                    android:inputType="textPhonetic"
                    android:textColor="#262626"
                    android:textColorHint="#afafaf"
                    android:theme="@style/BottomLine" />

                <Spinner
                    android:id="@+id/register_sizeOfDress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-4dp"
                    android:layout_marginTop="28dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/metropolis_regular"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/girl_dress"
                    android:textColor="#737373"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="@string/additional_details"
                    android:textColor="#262626"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress"
                    android:textColor="#262626"
                    android:textColorHint="#afafaf"
                    android:theme="@style/BottomLine" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="@string/people_details"
                    android:textColor="#262626"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/number_of_people"
                    android:textColor="#737373"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="25dp"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/register_numberOfPeople_none"
                        style="@style/AllCapsFalse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="@string/none"
                        android:textAlignment="center"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/register_numberOfPeople_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="@string/one"
                        android:textAlignment="center"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/register_numberOfPeople_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="@string/two"
                        android:textAlignment="center"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="@string/vehicle_details"
                    android:textColor="#262626"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/metropolis_regular"
                    android:text="@string/number_of_vehicle"
                    android:textColor="#737373"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="25dp"
                    android:clipChildren="false"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/register_numberOfVehicle_none"
                        style="@style/AllCapsFalse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="@string/none"
                        android:textAlignment="center"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/register_numberOfVehicle_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="@string/one"
                        android:textAlignment="center"
                        android:textColor="#444444"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="@string/terms"
                    android:layout_marginStart="4dp"
                    android:textColor="#262626"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/register_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/termsAndCondition"
                    android:theme="@style/BottomLine" />

            </LinearLayout>

            <Button
                android:id="@+id/register_submit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/gradient_no_radius"
                android:fontFamily="@font/metropolis_semibold"
                android:text="@string/submit"
                android:textColor="@color/whiteTransparent"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
