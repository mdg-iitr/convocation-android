<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_home_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    app:cardElevation="3dp"
    tools:showIn="@layout/fragment_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/cardborder">

        <TextView
            android:id="@+id/intro_home_card_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18.6dp"
            android:layout_marginTop="14.2dp"
            android:fontFamily="@font/metropolis_semibold"
            android:textColor="#262626"
            android:textSize="16sp"
            tools:text="31st Convocation IIT Roorkee" />

        <TextView
            android:id="@+id/intro_home_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/intro_home_card_head"
            android:layout_marginStart="18.6dp"
            android:layout_marginTop="5.5dp"
            android:fontFamily="@font/metropolis_regular"
            android:textColor="#444444"
            android:textSize="12sp"
            tools:text="21 - 23 September 2018" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
