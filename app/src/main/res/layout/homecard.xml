<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:showIn="@layout/activity_home">
    
        <android.support.v7.widget.CardView
            android:id="@+id/intro_home_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardborder">

            <RelativeLayout
                android:layout_width="338dp"
                android:layout_height="179dp"
                android:background="@drawable/cardborder"
                android:layout_gravity="center">
    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="18.6dp"
                android:layout_marginTop="14.2dp"
                android:layout_marginStart="18.6dp">
                <TextView
                    android:id="@+id/intro_home_card_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#262626"
                    tools:text="31st Convocation IIT Roorkee"
                    />

                <TextView
                    android:id="@+id/intro_home_card_date"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5.5dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    tools:text="21 - 23 September 2018"
                    />
    
            </LinearLayout>
            </RelativeLayout>
    
        </android.support.v7.widget.CardView>
    
    </android.support.constraint.ConstraintLayout>
