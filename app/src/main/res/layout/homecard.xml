<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_home">

    <android.support.v7.widget.CardView
        android:id="@+id/intro_home_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardborder">

        <RelativeLayout
            android:layout_width="338dp"
            android:layout_height="179dp"
            android:layout_gravity="center"
            android:background="@drawable/cardborder">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18.6dp"
                android:layout_marginStart="18.6dp"
                android:layout_marginTop="14.2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/intro_home_card_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#262626"
                    android:textSize="16sp"
                    tools:text="31st Convocation IIT Roorkee" />

                <TextView
                    android:id="@+id/intro_home_card_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.5dp"
                    android:textColor="#444444"
                    android:textSize="12sp"
                    tools:text="21 - 23 September 2018" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
