<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/branchStudent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        tools:text="Harjot Singh" />

    <ImageView
        android:id="@+id/is_registered_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/branchStudent_name"
        android:layout_alignTop="@+id/branchStudent_name"
        android:layout_toEndOf="@id/branchStudent_name"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/branchStudent_enrollment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/metropolis_regular"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

</RelativeLayout>