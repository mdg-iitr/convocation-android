<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scheduleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardBackgroundColor="#D3D3D3"
        app:ignore="NamespaceTypo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/scheduleCard_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"/>
                <!--android:src=""-->

            <TextView
                android:id="@+id/scheduleCard_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/scheduleCard_image"
                android:gravity="top"
                android:padding="10dp"
                android:textColor="#111111"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scheduleCard_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/scheduleCard_image"
                android:gravity="bottom"
                android:padding="10dp"
                android:textColor="#111111"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="Time"
                    android:textColor="#111111"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/scheduleCard_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:textColor="#111111"
                    android:textSize="10sp" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
